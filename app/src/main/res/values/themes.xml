<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrenMkOnline" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_font</item>
        <item name="colorPrimaryVariant">@color/color_icons</item>
        <item name="colorOnPrimary">@color/color_menu</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NavigationMenu">
        <item name="android:background">@color/color_menu</item>
        <item name="itemIconTint">@color/color_icons</item>
        <item name="itemTextColor">@color/color_font</item>
    </style>

    <style name="Theme.BrenMkOnline.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BrenMkOnline.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BrenMkOnline.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>